<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!----======== CSS ======== -->
    <link rel="stylesheet" href="~/lib/CurvaDashBoard/boostrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/CurvaDashBoardCss/style.css">
    <!----===== Iconscout CSS ===== -->
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <title>Admin Dashboard Panel</title>
</head>
<body>
    <nav>
        <div class="logo-name">
            <div class="logo-image">
                <a asp-action="index"><img src="~/images/download (3).png" alt=""></a>
            </div>
        </div>
        <div class="menu-items ">
            <ul class="nav-links p-0">
                <li>
                    <a asp-action="index">
                        <i class="uil uil-estate"></i>
                        <span class="link-name">Dahsboard</span>
                    </a>
                </li>
                <li>
                    <a asp-action="AddProduct">
                        <i class="uil uil-files-landscapes"></i>
                        <span class="link-name">Add Product</span>
                    </a>
                </li>
                <li>
                    <a asp-action="ViewProducts">
                        <i class="uil uil-chart"></i>
                        <span class="link-name">View Product</span>
                    </a>
                </li>
                <li>
                    <a asp-action="AddBlog">
                        <i class="uil uil-thumbs-up"></i>
                        <span class="link-name">Add Blog</span>
                    </a>
                </li>
                <li>
                    <a asp-action="ViewBlogs">
                        <i class="uil uil-comments"></i>
                        <span class="link-name">View Blog</span>
                    </a>
                </li>
                <li>
                    <a asp-action="ViewUsers" asp-controller="DashBoard">
                        <i class="uil uil-users-alt"></i>
                        <span class="link-name">View All Users</span>
                    </a>
                </li>
                <li>
                    <a asp-action="ViewMassages" asp-controller="DashBoard">
                        <i class="uil uil-comment-alt-chart-lines"></i>
                        <span class="link-name">All Massages</span>
                    </a>
                </li>
            </ul>

            <ul class="logout-mode p-0">
                <li>
                    <a asp-controller="Home" asp-action="index">
                        <i class="uil uil-browser"></i>
                        <span class="link-name">curva Store</span>
                    </a>
                </li>             
            </ul>
        </div>
    </nav>
    <section class="dashboard">
        <div class="top">
            <i class="uil uil-bars sidebar-toggle"></i>
            <div class="search-box">
                <i class="uil uil-search"></i>
                <input type="text" placeholder="Search here...">
            </div>
            <img src="~/images/@ViewData["userImg"]" alt="">
        </div>
        @RenderBody()
    </section>
    <script src="~/js/CurvaDashBoardJS/script.js"></script>
    <script src="~/js/CurvaStoreJS/script.js"></script>
    <script src="~/lib/CurvaDashBoard/boostrap/js/bootstrap.min.js"></script>
</body>
</html>