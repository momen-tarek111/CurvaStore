@{
	Layout = "_CurvaStoreLayout";
}
@model WishListModelView
<div class="cover_header_page">
    <div class="overlay-cover-page d-flex align-items-end">
        <div class="container de">
            <div class="row">
                <div class="col-12">
                    <div class="bg-transparent iq-card ">
                        <div class="row d-flex align-items-center mb-2">
                            <div class="col-lg-12">
                                <div class="d-flex align-items-center bg-transparent">
                                    <ol class="breadcrumb bg-transparent mb-0 mt-1">
                                        <li class="breadcrumb-item text-initial">
                                            <a asp-controller="Home" asp-action="index" class="router-link-active home" target="_self">
                                                <i class="fas fa-home"></i>Home
                                            </a>
                                        </li>
                                        <li class="breadcrumb-item text-white">
                                            <a href="./Profile.html" class="router-link-active blogs" target="_self"> Profile </a>
                                        </li>
                                        <li class="breadcrumb-item text-white active">
                                            <span aria-current="location"> Wishlist </span>
                                        </li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<section>
    <div class="container">
        <div class="row p-4">
            <div class="d-flex justify-content-start col-lg-4 col-12">
                <span class="fs-6">
                    <span>
                        <span class="title-mode-part">Wishlist</span>
                    </span>
                </span>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3">
                <ul class="list-profile">
                    <li><a href="#" class=""><i class="far fa-user"></i> Profile Info</a></li>
                    <li><a asp-controller="Home" asp-action="ViewWishList" class="router-link-exact-active router-link-active"><i class="far fa-heart"></i> Wishlist</a></li>
                </ul>
            </div>
            <div class="col-lg-9">
                @if (Model.wishLists.Count() != 0)
                {
                    <div class="mb-3 pt-3 d-flex justify-content-end">
                        <div class="dropdown d-flex">
                            <button type="button" class="btn-sort btn dropdown-toggle btn-secondary" data-bs-toggle="dropdown">
                                <span>
                                    <i class="fas fa-sort-alpha-down"></i>
                                    Sort
                                </span>
                            </button>
                            <ul class="dropdown-menu curva-dropdown">
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="ViewWishList" asp-route-sortId="1"> Price Accending</a></li>
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="ViewWishList" asp-route-sortId="2"> Price Deccending</a></li>
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="ViewWishList" asp-route-sortId="3"> A → Z</a></li>
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="ViewWishList" asp-route-sortId="4"> Z → A</a></li>
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="ViewWishList" asp-route-sortId="5"> Newest First</a></li>
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="ViewWishList" asp-route-sortId="6"> Oldest First</a></li>
                            </ul>
                        </div>
                    </div>
                }
                <div class="row mb-5" style="text-align:center;">
                    @{
                        if (Model.wishLists.Count() != 0)
                        {
                            foreach (var item in Model.wishLists)
                            {
                                if (item.product.OldPrice == 0)
                                {
                                    <div class="col-md-6 col-12 col-lg-4">
                                        <a asp-controller="Home" asp-action="SingleProduct" asp-route-id="@item.product.Id">
                                            <div class="card product-card-container mb-5 cursor-pointer">
                                                <div class="card-body pb-0 pt-0">
                                                    <div class="img-container d-flex justify-content-center align-content-center">
                                                        <img style="width: 100%;" src="~/images/@item.product.Img">
                                                    </div>
                                                    <div class="card-body p-3">
                                                        <h5 style="white-space: nowrap; overflow: hidden; font-weight: normal;text-overflow:ellipsis;">
                                                            @item.product.Name
                                                        </h5>
                                                        <div class="d-flex justify-content-between align-items-start">
                                                            <p class="font-size-18">
                                                                <span class="font-weight-bold text-warning">@item.product.price</span><span class="font-size-12"> EGP</span>
                                                            </p>
                                                            <span class="d-inline-flex product-card-icons-container flex-sm-row flex-column-reverse">
                                                                <i class="fas fa-shopping-cart  cars font-size-30"></i>
                                                                <i class="fas fa-arrow-right card-arrow-icon font-size-30"></i>
                                                            </span>
                                                        </div>
                                                    </div>
                                                    <button class="fav-btn"><i class="fs-6 fas fa-heart fav-color"></i></button>
                                                    <!-- <div class="tags"><span class="tag offer-tag"> offer </span></div> -->
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <div class="col-md-6 col-12 col-lg-4">
                                        <a asp-controller="Home" asp-action="SingleProduct" asp-route-id="@item.product.Id">
                                            <div class="card product-card-container mb-5 cursor-pointer">
                                                <div class="card-body pb-0 pt-0">
                                                    <div class="img-container d-flex justify-content-center align-content-center">
                                                        <img style="width: 100%;" src="~/images/@item.product.Img">
                                                    </div>
                                                    <div class="card-body p-3">
                                                        <h5 style="white-space: nowrap; overflow: hidden; font-weight: normal;">
                                                            @item.product.Name
                                                        </h5>
                                                        <div class="d-flex justify-content-between align-items-start">
                                                            <p class="font-size-18">
                                                                <span class="font-weight-bold text-warning">@item.product.price</span><span class="font-size-12"> EGP</span>
                                                            </p>
                                                            <p class="d-inline-block mb-0 ">
                                                                <span class="text-decoration-line-through text-secondary">@item.product.OldPrice</span>
                                                                <span class="e text-decoration-line-through text-secondary">EGP</span>
                                                            </p>
                                                            <span class="d-inline-flex product-card-icons-container flex-sm-row flex-column-reverse">
                                                                <i class="fas fa-shopping-cart  cars font-size-30"></i>
                                                                <i class="fas fa-arrow-right card-arrow-icon font-size-30"></i>
                                                            </span>
                                                        </div>
                                                    </div>
                                                    <button class="fav-btn"><i class="fs-6 fas fa-heart fav-color"></i></button>
                                                    <div class="tags"><span class="tag offer-tag"> offer </span></div>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                }
                            }
                        }
                        else
                        {
                            <p style="font-size:20px;font-weight:bold">No Products Found</p>
                        }
                    }
                </div>
                @if (Model.wishLists.Count() != 0)
                {
                    <div class="row mb-5">
                        <div class="d-flex justify-content-center col">
                            <ul class="pagination curva-pagination b-pagination">
                                @{
                                    if (Model.currpage == 1)
                                    {
                                        <li class="page-item disabled">
                                            <span class="page-link">«</span>
                                        </li>
                                        <li class="page-item disabled ">
                                            <span class="page-link">‹</span>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="page-item">
                                            <a asp-controller="Home" asp-action="ViewWishList" asp-route-currPage="1" asp-route-sortId="@Model.sortID" class="page-link">«</a>
                                        </li>
                                        <li class="page-item">
                                            <a asp-controller="Home" asp-action="ViewWishList" asp-route-currPage="@Model.currpage-1" asp-route-sortId="@Model.sortID" class="page-link">‹</a>
                                        </li>
                                    }
                                    if (Model.currpage >= 1 && Model.currpage <= 3)
                                    {
                                        if (Model.totalPages <= 4)
                                        {
                                            for (int i = 1; i <= Model.totalPages; i++)
                                            {
                                                if (i == Model.currpage)
                                                {
                                                    <li class="page-item active ">
                                                        <a class="page-link">@i</a>
                                                    </li>
                                                }
                                                else
                                                {
                                                    <li class="page-item ">
                                                        <a asp-controller="Home" asp-action="ViewWishList" asp-route-currPage="@i" asp-route-sortId="@Model.sortID" class="page-link">@i</a>
                                                    </li>
                                                }
                                            }
                                        }
                                        else
                                        {
                                            for (int i = 1; i <= Model.totalPages; i++)
                                            {
                                                if (i == Model.currpage)
                                                {
                                                    <li class="page-item active ">
                                                        <a class="page-link">@i</a>
                                                    </li>
                                                }
                                                else
                                                {
                                                    <li class="page-item ">
                                                        <a asp-controller="Home" asp-action="ViewWishList" asp-route-currPage="@i" asp-route-sortId="@Model.sortID" class="page-link">@i</a>
                                                    </li>
                                                }
                                            }
                                            <li class="page-item disabled bv-d-xs-down-none ">
                                                <span class="page-link">…</span>
                                            </li>
                                        }
                                    }
                                    else if (Model.currpage > 3 && Model.currpage <= (Model.totalPages - 3))
                                    {
                                        <li class="page-item disabled bv-d-xs-down-none ">
                                            <span class="page-link">…</span>
                                        </li>
                                        for (int i = Model.currpage - 1; i <= Model.currpage + 1; i++)
                                        {
                                            if (i == Model.currpage)
                                            {
                                                <li class="page-item active ">
                                                    <a class="page-link">@i</a>
                                                </li>
                                            }
                                            else
                                            {
                                                <li class="page-item ">
                                                    <a asp-controller="Home" asp-action="ViewWishList" asp-route-currPage="@i" asp-route-sortId="@Model.sortID" class="page-link">@i</a>
                                                </li>
                                            }
                                        }
                                        <li class="page-item disabled bv-d-xs-down-none ">
                                            <span class="page-link">…</span>
                                        </li>
                                    }
                                    else
                                    {
                                        for (int i = Model.totalPages - 3; i <= Model.totalPages; i++)
                                        {
                                            <li class="page-item disabled bv-d-xs-down-none ">
                                                <span class="page-link">…</span>
                                            </li>
                                            if (i == Model.currpage)
                                            {
                                                <li class="page-item active ">
                                                    <a class="page-link">@i</a>
                                                </li>
                                            }
                                            else
                                            {
                                                <li class="page-item ">
                                                    <a asp-controller="Home" asp-action="ViewWishList" asp-route-currPage="@i" asp-route-sortId="@Model.sortID" class="page-link">@i</a>
                                                </li>
                                            }
                                        }
                                    }
                                    if (Model.currpage == Model.totalPages || Model.totalPages == 1)
                                    {
                                        <li class="page-item disabled">
                                            <span class="page-link">›</span>
                                        </li>
                                        <li class="page-item disabled ">
                                            <span class="page-link">»</span>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="page-item ">
                                            <a asp-controller="Home" asp-action="ViewWishList" asp-route-currPage="@Model.currpage+1" asp-route-sortId="@Model.sortID" class="page-link">›</a>
                                        </li>
                                        <li class="page-item ">
                                            <a asp-controller="Home" asp-action="ViewWishList" asp-route-currPage="@Model.totalPages" asp-route-sortId="@Model.sortID" class="page-link">»</a>
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>