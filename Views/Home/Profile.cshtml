@model CurvaUser
@{
	Layout = "_CurvaStoreLayout";
}
<div class="cover_header_page">
    <div class="overlay-cover-page d-flex align-items-end">
        <div class="container de">
            <div class="row">
                <div class="col-12">
                    <div class="bg-transparent iq-card ">
                        <div class="row d-flex align-items-center mb-2">
                            <div class="col-lg-12">
                                <div class="d-flex align-items-center bg-transparent">
                                    <ol class="breadcrumb bg-transparent mb-0 mt-1">
                                        <li class="breadcrumb-item text-initial">
                                            <a asp-controller="Home" asp-action="Index" class="router-link-active home" target="_self">
                                                <i class="fas fa-home"></i>Home
                                            </a>
                                        </li>
                                        <li class="breadcrumb-item text-white active">
                                            <span aria-current="location"> Profile </span>
                                        </li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<section>
    <div class="container">
        <div class="row p-4">
            <div class="d-flex justify-content-start col-lg-4 col-12">
                <span class="fs-6">
                    <span>
                        <span class="title-colored-part">Profile</span>
                    </span>
                    <span>
                        <span class="title-mode-part">Info</span>
                    </span>
                </span>
            </div>
            <div class="d-flex justify-content-end col-lg-8 col-12">
                <span class="p-1">
                    <a asp-controller="Home" asp-action="ChangePassword" class="">
                        <button class="curva-icon-btn change-pass me-1">Change Password</button>
                    </a>
                    <a  asp-controller="Home" asp-action="EditProfile" class="">
                        <button class="curva-icon-btn"><i class="fas fa-pen"></i> Edit Profile</button>
                    </a>
                </span>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3">
                <ul class="list-profile">
                    <li><span style="font-size: 18px;font-weight: 500;" class="router-link-exact-active router-link-active"><i class="far fa-user"></i>  Profile Info</span></li>
                    <li><a asp-controller="Home" asp-action="ViewWishList"><i class="far fa-heart"></i> Wishlist</a></li>
                </ul>
            </div>
            <div class="col-lg-9">
                <div style="background-color: #efefef;" class="p-3 ps-5 mb-4">
                    <div class="row">
                        <div class="d-flex justify-content-center col-lg-3 col-6 m-md-0 m-auto mb-3">
                            <img src="~/images/th.jpeg" alt="" class="rounded-circle" style="width: 90%">
                        </div>
                        <div class="col-lg-9 mt-2">
                            <div class="row mb-3">
                                <h4 style="color: #d1ab5f;">@Model.FullName</h4>
                                @if (Model.Gender.ToLower() == "male")
                                {
                                    <img src="~/images/male.png" style="height: 21px; width: 41px;" alt="">
                                }
                                else
                                {
                                    <img src="~/images/download (15).png" style="height: 25px; width: 61px;" alt="">
                                }
                            </div>
                            <div class="row">
                                <div class="col-lg-12">

                                    <i class="fas fa-envelope me-2 d-inline-block" style="color: #d1ab5f;"></i>
                                    <p class="text-initial d-inline-block">
                                        @Model.Email
                                    </p>
                                </div>
                                <div class="col-lg-12">

                                    <i class="fas fa-phone-alt me-2 d-inline-block" style="color: #d1ab5f;"></i>
                                    <p class="text-initial d-inline-block">
                                        @Model.PhoneNumber
                                    </p>
                                </div>
                                <div class="col-lg-12">
                                    <i class=""></i>
                                    <i class="fas fa-birthday-cake me-2 d-inline-block" style="color: #d1ab5f;"></i>
                                    <p class="text-initial d-inline-block">
                                        @Model.date.ToString()
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>