@model ProductColor
@{
    Layout = "_CurvaDashBoardLayout";
}
<div class="dash-content">
    <div class="overview">
        <div class="title">
            <span class="text" style="color: #d1ab5f;">Adding Product</span>
        </div>
        <div>
            <form method="post" asp-action="AddProduct" class="row" enctype="multipart/form-data">
                <div class="mb-3 col-lg-6">
                    <label asp-for="product.code" class="form-label">Product Code</label>
                    <input type="text"asp-for="product.code"class="form-control"/>
                    <span asp-validation-for="product.code" class="text-danger"></span>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="product.Name" class="form-label">Product Name</label>
                    <input type="text"asp-for="product.Name"class="form-control"/>
                    <span asp-validation-for="product.Name" class="text-danger"></span>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="product.Description" class="form-label">Product Description</label>
                    <textarea type="text"asp-for="product.Description"class="form-control"></textarea>
                    <span asp-validation-for="product.Description" class="text-danger"></span>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="product.BrandName" class="form-label">Brand Name</label>
                    <input type="text"asp-for="product.BrandName"class="form-control"/>
                    <span asp-validation-for="product.BrandName" class="text-danger"></span>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="product.ClubName" class="form-label">Club Name</label>
                    <input type="text"asp-for="product.ClubName"class="form-control"/>
                    <span asp-validation-for="product.ClubName" class="text-danger"></span>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="product.Season" class="form-label">Season</label>
                    <input type="text"asp-for="product.Season"class="form-control"/>
                    <span asp-validation-for="product.Season" class="text-danger"></span>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="product.price" class="form-label">Product price</label>
                    <input type="number"asp-for="product.price"class="form-control">
                    <span asp-validation-for="product.price" class="text-danger"></span>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="product.OldPrice" class="form-label">Product old price</label>
                    <input type="number"asp-for="product.OldPrice"class="form-control">
                    <span asp-validation-for="product.OldPrice" class="text-danger"></span>
                </div>
                <div class="col-lg-6">
                    <label asp-for="product.CategoroyID" class="form-label">category</label>
                    <select class="form-select "asp-for="product.CategoroyID">
                        <option selected hidden>Select one</option>
                        @{
                            foreach (var item in Model._categories)
                            {
                                <option value="@item.id">@item.Name</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="product.CategoroyID" class="text-danger"></span>
                </div>
                <div class="mb-3 mt-4 col-lg-12">
                    <div class="row" id="parentDiv">                           
                        <div class="col-lg-2">
                            <label asp-for="colorSize.color" class="form-label">color of product</label>
                            <div class="row">
                                <div class="col-lg-6">
                                    <input  type="color"class="form-control "asp-for="colorSize.color">
                                </div>
                            </div>
                            <span asp-validation-for="colorSize.color" class="text-danger"></span>
                        </div>
                        <div class="col-lg-2">
                            <label asp-for="colorSize.Size" class="form-label">Size of product</label>
                            <div class="row">
                                <div class="col-lg-8">
                                    <input type="text"class="form-control"asp-for="colorSize.Size">
                                </div>
                            </div>
                            <span asp-validation-for="colorSize.Size" class="text-danger"></span>
                        </div>
                        <div class="col-lg-2">
                            <label asp-for="colorSize.Quantity" class="form-label">Product Quantity</label>
                            <div class="row">
                                <div class="col-lg-8">
                                    <input type="number"class="form-control"asp-for="colorSize.Quantity ">
                                </div>
                            </div>
                            <span asp-validation-for="colorSize.Quantity" class="text-danger"></span>
                        </div>                   
                    </div>
                </div>
                <div class="mb-3 col-lg-12 d-flex align-items-center mt-4">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="product.InStock" type="checkbox" value="true" id="" />
                        <label class="form-check-label" asp-for="product.InStock"> Enable Product </label>
                    </div>
                </div>
                <div class=" mb-3 col-lg-5 d-flex align-items-center mt-4 ">
                    <label for="" class="form-label" asp-for="product.ProductImage">
                        img product
                        <input class="form-control mt-2" asp-for="product.ProductImage" type="file" accept="image/*" id="formFile">
                    </label>
                    <span asp-validation-for="product.ProductImage" class="text-danger"></span>
                </div>
                <div class="col-lg-12 d-flex justify-content-center  ">
                    <button type="submit" class="btn butt">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
